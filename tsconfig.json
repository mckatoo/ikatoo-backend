{
  "compilerOptions": {
    "incremental": true,                              
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2020",                                     
    "lib": ["ES6"],                                        
    "removeComments": true,
    "experimentalDecorators": true,                   
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "baseUrl": "./",                                  
    "paths": {
      "@services/*": ["src/services/*"]
    },                                      
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                  
    "resolveJsonModule": true,                        
    "sourceMap": true,                                
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "./src/**/*"
  ]
}
